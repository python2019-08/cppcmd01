{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "wslCompile",
            "type": "shell",
            "command": "cd ${workspaceFolder} && cmake -S. -Bbuild && cmake --build build", // 根据你的项目结构调整命令
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"], // 使用 GCC 的问题匹配器，你也可以使用其他问题匹配器如 CMake 的 $cmake 或直接使用 $msCompile 来匹配 MSBuild 的输出。
            "presentation": {
                "reveal": "always", // 在终端中显示输出结果。你可以选择 silent, always 或 never。
                "panel": "shared" // 控制输出面板的行为。可以是 shared, dedicated 或 new。shared 会重用现有的输出面板。dedicated 会为每个任务创建一个新的面板。new 会为每个任务创建一个新的面板并在完成后立即关闭它。默认值是 shared。
            }
        }
    ]
}